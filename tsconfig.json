{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "removeComments": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "paths": {
      "@monts/*": [
        "src/*"
      ],
      "rebass/styled-components": [
        "node_modules/@types/rebass"
      ],
      "@rebass/forms/styled-components": [
        "node_modules/@types/rebass__forms"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "./src/**/*.test.tsx"
  ],
  "include": [
    "next-env.d.ts",
    "./src/**/*"
  ]
}
